-- LocalScript (داخل ScreenGui)
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local Remote = ReplicatedStorage:WaitForChild("Event")

local screenGui = script.Parent
local nameBox = screenGui:WaitForChild("NameBox")
local freezeBtn = screenGui:WaitForChild("FreezeBtn")

freezeBtn.MouseButton1Click:Connect(function()
    local txt = tostring(nameBox.Text or "")
    if #txt < 1 then return end
    local prefix = string.sub(txt, 1, math.min(3, #txt)) -- أول 3 أحرف
    Remote:FireServer(prefix)
end)
