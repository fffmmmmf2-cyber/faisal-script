-- الخدمات
local Workspace = game:GetService("Workspace")
local RunService = game:GetService("RunService")

-- البارت اللي يمثل المنطقة
local petArea = Workspace:WaitForChild("PetArea")

-- دالة لتثبيت كل PetMover داخل PetArea
local function lockPetsInArea()
    for _, pet in ipairs(Workspace:GetDescendants()) do
        if pet.Name == "PetMover" and pet:IsA("BasePart") then
            -- تثبيت البارت في وسط PetArea
            pet.CFrame = petArea.CFrame
            -- منع أي حركة
            pet.Anchored = true
            pet.Velocity = Vector3.new(0,0,0)
            pet.RotVelocity = Vector3.new(0,0,0)
        end
    end
end

-- تشغيل التثبيت كل فريم
RunService.Heartbeat:Connect(lockPetsInArea)
