local workspace = game:GetService("Workspace")
local Players = game:GetService("Players")
local Player = Players.LocalPlayer

-- دالة لإنشاء نص فوق البارت
local function createBillboard(part, text)
    local billboard = Instance.new("BillboardGui")
    billboard.Adornee = part
    billboard.Size = UDim2.new(0, 100, 0, 40)
    billboard.StudsOffset = Vector3.new(0, 2, 0) -- فوق البارت
    billboard.AlwaysOnTop = true
    billboard.Name = "PetMoverLabel"
    
    local label = Instance.new("TextLabel")
    label.Size = UDim2.new(1,0,1,0)
    label.BackgroundTransparency = 1
    label.TextColor3 = Color3.new(1,1,1)
    label.TextScaled = true
    label.Text = text
    label.Parent = billboard
    
    billboard.Parent = part
end

-- فحص جميع PetMover وإنشاء نص
for _, part in pairs(workspace:GetDescendants()) do
    if part:IsA("BasePart") and part.Name == "PetMover" then
        local text = ""
        if part.Parent:IsA("Model") then
            text = "تابع لموديل: "..part.Parent.Name
        else
            text = "بارت لحاله"
        end

        -- إزالة أي نص سابق
        if part:FindFirstChild("PetMoverLabel") then
            part.PetMoverLabel:Destroy()
        end

        createBillboard(part, text)
    end
end
