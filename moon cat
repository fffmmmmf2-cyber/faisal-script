local Players = game:GetService("Players")
local Player = Players.LocalPlayer

-- محاولة العثور على الانفنتوري الحقيقي في PlayerGui
local function openInventory()
    local playerGui = Player:WaitForChild("PlayerGui")
    
    -- عادة الانفنتوري يكون باسم معين، هنا نجرب بعض الأسماء الشائعة
    local inventoryNames = {"InventoryGUI", "BackpackGui", "PlayerInventory"}
    
    for _, name in ipairs(inventoryNames) do
        local gui = playerGui:FindFirstChild(name)
        if gui then
            gui.Visible = true -- نفتح الانفنتوري
            return true
        end
    end
    
    -- إذا ما وجدنا شيء نقدر نرسل رسالة للاعب
    warn("ما تم العثور على الانفنتوري في PlayerGui")
    return false
end

-- إنشاء زر على الشاشة
local screenGui = Instance.new("ScreenGui", Player:WaitForChild("PlayerGui"))
local openButton = Instance.new("TextButton")
openButton.Size = UDim2.new(0, 150, 0, 50)
openButton.Position = UDim2.new(0, 20, 0, 20)
openButton.Text = "افتح الشنطة"
openButton.BackgroundColor3 = Color3.fromRGB(50, 150, 255)
openButton.TextColor3 = Color3.fromRGB(255, 255, 255)
openButton.Parent = screenGui

-- عند الضغط على الزر نشغل الانفنتوري
openButton.MouseButton1Click:Connect(function()
    openInventory()
end)
