-- خدمات
local Workspace = game:GetService("Workspace")
local Players = game:GetService("Players")
local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- جدول لتخزين الأجزاء التي تم تكبيرها بالفعل
local enlargedParts = {}

-- دالة تكبر الـZone مرة واحدة فقط
local function enlargeZone(part)
    if part and part:IsA("BasePart") and not enlargedParts[part] then
        part.Size = part.Size * 10 -- تكبير 10 مرات
        enlargedParts[part] = true -- نسجل أنه تم تكبيره
    end
end

-- مراقبة كل الأجزاء الجديدة المضافة
Workspace.DescendantAdded:Connect(function(part)
    if part.Name == "Zone" and part:IsA("BasePart") then
        enlargeZone(part)
    end
end)

-- فحص الأجزاء الموجودة مسبقًا عند بداية اللعبة
for _, part in pairs(Workspace:GetDescendants()) do
    if part.Name == "Zone" and part:IsA("BasePart") then
        enlargeZone(part)
    end
end

-- إنشاء ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "FaisalCreditGUI"
screenGui.Parent = playerGui

-- إنشاء TextLabel ثابت على اليسار أعلى الشاشة
local textLabel = Instance.new("TextLabel")
textLabel.Size = UDim2.new(0, 150, 0, 30) -- صغير نسبيًا
textLabel.Position = UDim2.new(0, 10, 0, 10) -- يسار أعلى الشاشة
textLabel.BackgroundTransparency = 1
textLabel.Text = "Created by Faisal"
textLabel.TextColor3 = Color3.fromRGB(255, 255, 255) -- أبيض
textLabel.TextStrokeColor3 = Color3.fromRGB(0, 0, 0) -- حدود سوداء
textLabel.TextStrokeTransparency = 0
textLabel.Font = Enum.Font.SourceSansBold
textLabel.TextScaled = true
textLabel.Parent = screenGui
