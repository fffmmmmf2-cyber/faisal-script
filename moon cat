-- جلب كل البارتات في الـ Workspace
for _, part in pairs(workspace:GetDescendants()) do
    if part:IsA("BasePart") then
        local partName = part.Name
        
        -- تحديد البارتات اللي اسمها "Part" متبوعة برقم
        if string.match(partName, "^Part%d+$") then
            part.BrickColor = BrickColor.new("Bright blue") -- لون أزرق
        end
        
        -- تحديد البارتات اللي اسمها يحتوي كلمة "pet" أو "Pet"
        if string.find(partName:lower(), "pet") then
            part.BrickColor = BrickColor.new("Bright red") -- لون أحمر
        end
    end
end
