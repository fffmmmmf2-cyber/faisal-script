-- الخدمات
local Workspace = game:GetService("Workspace")

-- البارت اللي نبغى نخلي كل الأجزاء فيه
local petArea = Workspace:WaitForChild("PetArea")

-- قائمة البارتات
local partsList = {
    "Tail1", "Tail3", "Tail4",
    "BackLegR", "FrontLegR",
    "Torso", "RootPart", "PetMover", "CatLines",
    "RightEye", "LeftEye",
    "RightEar", "LeftEar",
    "Nose",
    "LeftLeg", "RightLeg",
    "FrontLegBase006", "FrontLeftLeg",
    "RightWhisker", "LeftWhisker",
    "RightEarInner", "LeftEarInner",
    "FrontLegL", "FrontLegR"
}

-- نقل وتثبيت كل جزء لمركز PetArea
for _, partName in ipairs(partsList) do
    local part = Workspace:FindFirstChild(partName, true)
    if part and part:IsA("BasePart") then
        part.CFrame = CFrame.new(petArea.Position) -- يحدد موقع الجزء في مركز PetArea
        part.Anchored = true -- يثبت الجزء
    end
end
