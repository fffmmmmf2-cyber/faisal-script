local Players = game:GetService("Players")
local Player = Players.LocalPlayer
local PlayerGui = Player:WaitForChild("PlayerGui")

-- دالة للبحث عن أي GUI يبدو كأنه انفنتوري
local function findInventoryGui(parent)
    for _, child in ipairs(parent:GetChildren()) do
        if child:IsA("Frame") or child:IsA("ScreenGui") then
            -- إذا كان فيه أي عناصر داخلية (مثلا أيقونات أو TextLabels) احتمال يكون انفنتوري
            if #child:GetChildren() > 0 then
                return child
            end
        end
        -- بحث بشكل متكرر داخل العناصر الفرعية
        local found = findInventoryGui(child)
        if found then
            return found
        end
    end
    return nil
end

-- دالة فتح الانفنتوري
local function openInventory()
    local gui = findInventoryGui(PlayerGui)
    if gui then
        gui.Visible = true
        print("تم العثور على الانفنتوري وفتحه")
    else
        warn("لم يتم العثور على الانفنتوري")
    end
end

-- إنشاء زر على الشاشة
local screenGui = Instance.new("ScreenGui", PlayerGui)
local openButton = Instance.new("TextButton")
openButton.Size = UDim2.new(0, 150, 0, 50)
openButton.Position = UDim2.new(0, 20, 0, 20)
openButton.Text = "افتح الشنطة"
openButton.BackgroundColor3 = Color3.fromRGB(50, 150, 255)
openButton.TextColor3 = Color3.fromRGB(255, 255, 255)
openButton.Parent = screenGui

-- عند الضغط على الزر نشغل الانفنتوري
openButton.MouseButton1Click:Connect(function()
    openInventory()
end)
