-- خدمات
local Workspace = game:GetService("Workspace")

-- جدول لتخزين الأجزاء التي تم تكبيرها بالفعل
local enlargedParts = {}

-- دالة تكبر الـZone مرة واحدة فقط
local function enlargeZone(part)
    if part and part:IsA("BasePart") and not enlargedParts[part] then
        part.Size = part.Size * 10 -- تكبير 10 مرات
        enlargedParts[part] = true -- نسجل أنه تم تكبيره
    end
end

-- فحص كل ثانية
while true do
    for _, part in pairs(Workspace:GetDescendants()) do
        if part.Name == "Zone" and part:IsA("BasePart") then
            enlargeZone(part)
        end
    end
    wait(1) -- يفحص كل ثانية
end
