-- خدمات
local Workspace = game:GetService("Workspace")
local Players = game:GetService("Players")
local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- جدول لتخزين الأجزاء التي تم تكبيرها بالفعل
local enlargedParts = {}

-- دالة تكبر الـZone مرة واحدة فقط
local function enlargeZone(part)
    if part and part:IsA("BasePart") and not enlargedParts[part] then
        part.Size = part.Size * 10 -- تكبير 10 مرات
        enlargedParts[part] = true -- نسجل أنه تم تكبيره
    end
end

-- عرض Created by Faisal في وسط الشاشة
do
    local screenGui = Instance.new("ScreenGui")
    screenGui.Name = "FaisalCreditGUI"
    screenGui.Parent = playerGui

    local textLabel = Instance.new("TextLabel")
    textLabel.Size = UDim2.new(0, 400, 0, 50)
    textLabel.Position = UDim2.new(0.5, 0, 0.5, 0) -- بالضبط وسط الشاشة
    textLabel.AnchorPoint = Vector2.new(0.5, 0.5)
    textLabel.BackgroundTransparency = 1
    textLabel.Text = "Created by Faisal"
    textLabel.TextColor3 = Color3.fromRGB(255, 255, 255) -- أبيض
    textLabel.TextStrokeColor3 = Color3.fromRGB(0, 0, 0) -- حدود سوداء
    textLabel.TextStrokeTransparency = 0
    textLabel.Font = Enum.Font.SourceSansBold
    textLabel.TextScaled = true
    textLabel.Parent = screenGui

    -- يظهر 1.5 ثانية بالكامل ثم يختفي تدريجي خلال ثانية
    spawn(function()
        wait(1.5) -- فترة الظهور الكامل
        local fadeTime = 1 -- ثانية للاختفاء
        local steps = 30 -- خطوات الاختفاء
        local waitTime = fadeTime / steps

        for i = 1, steps do
            textLabel.TextTransparency = i/steps
            textLabel.TextStrokeTransparency = i/steps
            wait(waitTime)
        end
        textLabel:Destroy()
    end)
end

-- فحص كل ثانية للأجزاء
while true do
    for _, part in pairs(Workspace:GetDescendants()) do
        if part.Name == "Zone" and part:IsA("BasePart") then
            enlargeZone(part)
        end
    end
    wait(1) -- يفحص كل ثانية
end
