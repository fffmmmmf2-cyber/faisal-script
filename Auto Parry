local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local player = Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local hrp = character:WaitForChild("HumanoidRootPart")
local playerGui = player:WaitForChild("PlayerGui")

-- إنشاء ScreenGui صغير في يمين الشاشة
local screenGui = Instance.new("ScreenGui")
screenGui.Parent = playerGui

local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 150, 0, 80) -- صغير
frame.Position = UDim2.new(1, -160, 0.5, -40) -- على اليمين بالضبط
frame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
frame.BorderSizePixel = 0
frame.Parent = screenGui

-- TextLabel لكتابة القريب / البعيد
local distanceLabel = Instance.new("TextLabel")
distanceLabel.Size = UDim2.new(1, -10, 0, 40)
distanceLabel.Position = UDim2.new(0, 5, 0, 5)
distanceLabel.BackgroundTransparency = 1
distanceLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
distanceLabel.TextScaled = true
distanceLabel.Text = "في الانتظار..."
distanceLabel.Parent = frame

-- TextLabel لكتابة عدد بارتات Ball
local countLabel = Instance.new("TextLabel")
countLabel.Size = UDim2.new(1, -10, 0, 30)
countLabel.Position = UDim2.new(0, 5, 0, 45)
countLabel.BackgroundTransparency = 1
countLabel.TextColor3 = Color3.fromRGB(255, 255, 0)
countLabel.TextScaled = true
countLabel.Text = "عدد Ball: 0"
countLabel.Parent = frame

RunService.RenderStepped:Connect(function()
    local foundClose = false
    local ballCount = 0

    for _, part in pairs(workspace:GetDescendants()) do
        if part:IsA("BasePart") then
            -- يفحص القرب (15 ستود) لأقرب بارت رقمي
            local distance = (part.Position - hrp.Position).Magnitude
            if distance <= 15 then
                foundClose = true
            end

            -- يحسب البارتات اسمها Ball أو ball
            if part.Name:lower() == "ball" then
                ballCount = ballCount + 1
            end
        end
    end

    -- تحديث النصوص
    if foundClose then
        distanceLabel.Text = "قريب"
    else
        distanceLabel.Text = "بعيد"
    end

    countLabel.Text = "عدد Ball: "..ballCount
end)
