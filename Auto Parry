local Players = game:GetService("Players")
local player = Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local hrp = character:WaitForChild("HumanoidRootPart")
local Workspace = game:GetService("Workspace")
local playerGui = player:WaitForChild("PlayerGui")

local triggerDistance = 30 -- المسافة للتفعيل

-- دالة للتحقق إذا الاسم رقم من 10 إلى 1000
local function isNumberName(name)
    local num = tonumber(name)
    return num and num >= 10 and num <= 1000
end

-- دالة لإيجاد كل الأزرار اللي اسمها BLOCKER أو block أو parry داخل PlayerGui
local function findAllTargetButtons()
    local buttons = {}
    for _, guiObject in pairs(playerGui:GetDescendants()) do
        if guiObject:IsA("GuiButton") then
            local lowerName = guiObject.Name:lower()
            if lowerName == "blocker" or lowerName == "block" or lowerName == "parry" then
                table.insert(buttons, guiObject)
            end
        end
    end
    return buttons
end

game:GetService("RunService").RenderStepped:Connect(function()
    local buttons = findAllTargetButtons()
    if #buttons == 0 then return end

    for _, part in pairs(Workspace:GetDescendants()) do
        if part:IsA("BasePart") and isNumberName(part.Name) then
            local distance = (hrp.Position - part.Position).Magnitude
            if distance <= triggerDistance then
                for _, btn in pairs(buttons) do
                    btn:Activate() -- يضغط كل الأزرار تلقائي
                end
            end
        end
    end
end)
