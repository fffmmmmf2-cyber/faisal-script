-- حذف كل شيء اسمه "abilitycooldown" من Workspace
for _, obj in pairs(workspace:GetDescendants()) do
    if obj.Name == "abilitycooldown" then
        obj:Destroy()
    end
end

-- حذف كل شيء اسمه "abilitycooldown" من كل Players
local Players = game:GetService("Players")

for _, player in pairs(Players:GetPlayers()) do
    if player:FindFirstChild("PlayerGui") then
        for _, gui in pairs(player.PlayerGui:GetDescendants()) do
            if gui.Name == "abilitycooldown" then
                gui:Destroy()
            end
        end
    end
end

-- مراقبة أي عناصر جديدة تظهر أثناء اللعب
workspace.DescendantAdded:Connect(function(obj)
    if obj.Name == "abilitycooldown" then
        obj:Destroy()
    end
end)

Players.PlayerAdded:Connect(function(player)
    player.CharacterAdded:Connect(function()
        if player:FindFirstChild("PlayerGui") then
            player.PlayerGui.DescendantAdded:Connect(function(gui)
                if gui.Name == "abilitycooldown" then
                    gui:Destroy()
                end
            end)
        end
    end)
end)
