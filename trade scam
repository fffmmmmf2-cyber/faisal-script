local Players = game:GetService("Players")
local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- الأنواع اللي نبي نسوي لها لابل
local allowed = {
    Frame = true,
    TextButton = true,
    ImageButton = true,
    TextLabel = true,
    ImageLabel = true,
    ScrollingFrame = true,
    ViewportFrame = true,
}

-- دالة تضيف لابل تحت العنصر
local function addLabel(guiObject)
    if allowed[guiObject.ClassName] and not guiObject:FindFirstChild("GuiNameLabel") then
        local label = Instance.new("TextLabel")
        label.Name = "GuiNameLabel"
        label.Text = guiObject.Name
        label.TextScaled = true
        label.TextColor3 = Color3.fromRGB(255, 255, 255)
        label.BackgroundTransparency = 1
        label.Size = UDim2.new(1, 0, 0, 12)
        label.Position = UDim2.new(0, 0, 1, 0) -- تحت العنصر
        label.ZIndex = 10
        label.Parent = guiObject
    end
end

-- يمشي على كل العناصر الحالية
for _, child in ipairs(playerGui:GetDescendants()) do
    addLabel(child)
end

-- أي عنصر جديد يضاف له لابل
playerGui.DescendantAdded:Connect(function(child)
    addLabel(child)
end)
