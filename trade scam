local Players = game:GetService("Players")
local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- دالة تضيف اسم تحت العنصر
local function addLabel(obj)
    if obj:IsA("GuiObject") then
        -- لو فيه لابل قديم نحذفه عشان ما يتكرر
        if obj:FindFirstChild("GuiNameLabel") then
            obj.GuiNameLabel:Destroy()
        end

        local label = Instance.new("TextLabel")
        label.Name = "GuiNameLabel"
        label.Size = UDim2.new(1, 0, 0, 20)
        label.Position = UDim2.new(0, 0, 1, 0)
        label.Text = obj.Name
        label.TextScaled = true
        label.TextColor3 = Color3.fromRGB(255, 255, 255)
        label.BackgroundTransparency = 1
        label.Parent = obj

        -- لو الاسم تغير يحدث تلقائي
        obj:GetPropertyChangedSignal("Name"):Connect(function()
            label.Text = obj.Name
        end)
    end
end

-- يمر على كل العناصر الحالية
for _, gui in pairs(playerGui:GetDescendants()) do
    addLabel(gui)
end

-- يراقب أي عنصر GUI جديد يضاف
playerGui.DescendantAdded:Connect(function(obj)
    addLabel(obj)
end)
