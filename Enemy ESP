-- خدمات
local Players = game:GetService("Players")
local Player = Players.LocalPlayer
local RunService = game:GetService("RunService")

-- إنشاء واجهة المستخدم
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "AnimuGUI"
screenGui.Parent = Player:WaitForChild("PlayerGui")

local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 200, 0, 120)
frame.Position = UDim2.new(0.8, 0, 0.3, 0) -- يمين الشاشة
frame.BackgroundColor3 = Color3.fromRGB(50,50,50)
frame.BackgroundTransparency = 0.3
frame.Active = true
frame.Draggable = true -- تخلي الإطار يتحرك
frame.Parent = screenGui

-- زر إخفاء/إظهار متحرك (رينبو صغير)
local toggleBtn = Instance.new("TextButton")
toggleBtn.Size = UDim2.new(0, 15, 0, 15) -- حجم صغير مره
toggleBtn.Position = UDim2.new(1, -20, 0, 5)
toggleBtn.Text = ""
toggleBtn.TextColor3 = Color3.fromRGB(255,255,255)
toggleBtn.BackgroundColor3 = Color3.fromRGB(255,0,0)
toggleBtn.Parent = frame

toggleBtn.MouseButton1Click:Connect(function()
    frame.Visible = not frame.Visible
end)

-- الخانة 1: Enemy ESP
local button1 = Instance.new("TextButton")
button1.Size = UDim2.new(0, 180, 0, 40)
button1.Position = UDim2.new(0, 10, 0, 10)
button1.Text = "Enemy ESP"
button1.TextColor3 = Color3.fromRGB(255,255,255)
button1.BackgroundColor3 = Color3.fromRGB(255,0,0)
button1.Parent = frame

-- الخانة 2: NoClip (فاضية حاليا)
local button2 = Instance.new("TextButton")
button2.Size = UDim2.new(0, 180, 0, 40)
button2.Position = UDim2.new(0, 10, 0, 60)
button2.Text = "NoClip"
button2.TextColor3 = Color3.fromRGB(255,255,255)
button2.BackgroundColor3 = Color3.fromRGB(0,0,255)
button2.Parent = frame

-- تحميل سكربت Enemy ESP عند الضغط على الخانة 1
local enemyESPScript = [[
loadstring(game:HttpGet("https://raw.githubusercontent.com/fffmmmmf2-cyber/faisal-script/refs/heads/main/Enemy%20ESP"))()
]]

button1.MouseButton1Click:Connect(function()
    loadstring(enemyESPScript)()
end)

-- تحميل سكربت NoClip عند الضغط على الخانة 2
local noClipScript = [[
loadstring(game:HttpGet("https://raw.githubusercontent.com/fffmmmmf2-cyber/faisal-script/refs/heads/main/NoClip"))()
]]

button2.MouseButton1Click:Connect(function()
    loadstring(noClipScript)()
end)
