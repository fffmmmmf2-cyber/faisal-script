-- LocalScript
local player = game.Players.LocalPlayer

local function teleportCharacter(char)
    local hrp = char:WaitForChild("HumanoidRootPart")
    local model = workspace:FindFirstChild("MailboxMachine", true)
    if model then
        local cf = model:GetPivot() -- يعطي مركز الموديل بشكل دقيق
        hrp.CFrame = cf + Vector3.new(0, 5, 0)
    end
end

player.CharacterAdded:Connect(teleportCharacter)

if player.Character then
    teleportCharacter(player.Character)
end
