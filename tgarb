local Mercy = {}

-- Alert: رسالة لشخص واحد (أنت فقط)
function Mercy.Alert(msg)
    rconsoleprint("[ALERT]: "..tostring(msg).."\n")
end

-- Broadcast: رسالة للجميع نفس الفكرة
function Mercy.Broadcast(msg)
    rconsoleprint("[BROADCAST]: "..tostring(msg).."\n")
end

-- Poll: تسوي طلب وترجع نتيجة
function Mercy.Poll(msg)
    rconsoleprint("[POLL SEND]: "..tostring(msg).."\n")
    return "POLL RESULT: OK"
end

-- Example usage
spawn(function()
    Mercy.Alert("Test Alert")
    Mercy.Broadcast("Test Broadcast")
    local result = Mercy.Poll("Ping")
    rconsoleprint("[POLL RESPONSE]: "..result.."\n")
end)

return Mercy
