local Players = game:GetService("Players")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local LocalPlayer = Players.LocalPlayer

-- إنشاء RemoteEvent لو ما موجود
local killEvent = ReplicatedStorage:FindFirstChild("KillPlayerEvent")
if not killEvent then
	local evt = Instance.new("RemoteEvent")
	evt.Name = "KillPlayerEvent"
	evt.Parent = ReplicatedStorage
	killEvent = evt
end

-- إنشاء GUI
local screenGui = Instance.new("ScreenGui")
screenGui.Parent = LocalPlayer:WaitForChild("PlayerGui")

local frame = Instance.new("Frame")
frame.Size = UDim2.new(0,220,0,300)
frame.Position = UDim2.new(0,20,0.5,-150)
frame.BackgroundColor3 = Color3.fromRGB(40,40,40)
frame.BorderSizePixel = 0
frame.Active = true
frame.Draggable = true
frame.Parent = screenGui

local UIListLayout = Instance.new("UIListLayout")
UIListLayout.Parent = frame
UIListLayout.Padding = UDim.new(0,5)

-- إضافة أزرار لكل لاعب
local function refreshPlayers()
	for _, c in pairs(frame:GetChildren()) do
		if c:IsA("TextButton") then
			c:Destroy()
		end
	end
	
	for _, p in pairs(Players:GetPlayers()) do
		if p ~= LocalPlayer then
			local btn = Instance.new("TextButton")
			btn.Size = UDim2.new(1, -10, 0, 30)
			btn.BackgroundColor3 = Color3.fromRGB(70,70,70)
			btn.TextColor3 = Color3.fromRGB(255,255,255)
			btn.Font = Enum.Font.SourceSansBold
			btn.TextSize = 18
			btn.Text = p.Name
			btn.Parent = frame
			
			btn.MouseButton1Click:Connect(function()
				killEvent:FireServer(p.Name)
			end)
		end
	end
end

Players.PlayerAdded:Connect(refreshPlayers)
Players.PlayerRemoving:Connect(refreshPlayers)
refreshPlayers()
