local player = game.Players.LocalPlayer
local RunService = game:GetService("RunService")

-- الإحداثيات
local coords = {
	Vector3.new(199, -3, 23),  -- الموقع الأول
	Vector3.new(285, -3, 35),  -- الموقع الثاني
}

local index = 1

-- GUI يبقى دائمًا
local gui = Instance.new("ScreenGui")
gui.Name = "TeleportGUI"
gui.ResetOnSpawn = false
gui.Parent = player:WaitForChild("PlayerGui")

-- الزر
local btn = Instance.new("TextButton", gui)
btn.Size = UDim2.new(0, 120, 0, 40)
btn.Position = UDim2.new(0.5, -60, 0, 10)
btn.Text = "Teleport"
btn.TextScaled = true
btn.TextColor3 = Color3.new(1,1,1)
btn.Font = Enum.Font.GothamBold
btn.Active = true
btn.Draggable = true

-- Rainbow
local hue = 0
RunService.RenderStepped:Connect(function()
	hue = (hue + 1) % 360
	btn.BackgroundColor3 = Color3.fromHSV(hue/360,1,1)
end)

-- المتغيرات اللي تربط الشخصية
local char = player.Character or player.CharacterAdded:Wait()
local root = char:WaitForChild("HumanoidRootPart")

-- دالة تعيد تهيئة root لما تموت
local function refreshChar()
	char = player.Character or player.CharacterAdded:Wait()
	root = char:WaitForChild("HumanoidRootPart")
end

-- ربط عند وفاة الشخصية
player.CharacterAdded:Connect(function()
	refreshChar()
	index = 1
end)

-- تيليبورت مع تحقق من الوصول
local function tp(pos)
	if not root then refreshChar() end
	for i = 1, 5 do
		if root and root.Parent then
			root.CFrame = CFrame.new(pos)
			task.wait(0.1)
			if (root.Position - pos).Magnitude < 2 then break end
		end
	end
end

-- الزر
btn.MouseButton1Click:Connect(function()
	if not root or not root.Parent then refreshChar() end
	tp(coords[index])
	index = index + 1
	if index > #coords then index = 1 end
end)
