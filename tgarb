-- Remote Scanner (Safe Mode)
-- موجه للجوال + دلتا
-- ما يسوي سبام ولا يخليك تنطرد

local Players = game:GetService("Players")
local LP = Players.LocalPlayer
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local Workspace = game.Workspace

local ScanTargets = {
    ReplicatedStorage,
    Workspace,
    game:GetService("StarterPlayer"),
}

local function safeFire(remote)
    task.spawn(function()
        pcall(function()
            if remote:IsA("RemoteEvent") then
                remote:FireServer("test") -- Ping بسيط جداً
            elseif remote:IsA("RemoteFunction") then
                remote:InvokeServer("test")
            end
        end)
    end)
end

local function scanFolder(folder)
    for _, v in ipairs(folder:GetDescendants()) do
        if v:IsA("RemoteEvent") or v:IsA("RemoteFunction") then
            print("[REMOTE FOUND] →", v:GetFullName())
            task.wait(0.15) -- تأخير عشان ما ينطرد
            safeFire(v)
        end
    end
end

task.spawn(function()
    for _, folder in ipairs(ScanTargets) do
        scanFolder(folder)
        task.wait(0.5)
    end
    print("✓ Scan Finished (Safe Mode)")
end)
