-- Script: ServerScriptService/DeleteNamedParts.lua

local function deleteParts()
	for _, obj in pairs(workspace:GetDescendants()) do
		if obj:IsA("BasePart") and obj.Name == "Part" then
			obj:Destroy()
		end
	end
	print("✅ تم حذف جميع الأجزاء اللي اسمها Part")
end

-- يحذفها مرة عند بداية اللعبة
deleteParts()

-- ولو تبي يخليها تلقائي (كل فترة يتأكد)
while true do
	wait(5) -- كل 5 ثواني
	deleteParts()
end
