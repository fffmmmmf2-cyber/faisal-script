-- أول شي يمسح الموجود حاليًا
for _, obj in pairs(workspace:GetDescendants()) do
    if obj.Name:lower():find("wave") then
        obj:Destroy()
    end
end

-- بعدين يراقب الجديد ويشيله فورًا
workspace.DescendantAdded:Connect(function(obj)
    if obj.Name:lower():find("wave") then
        obj:Destroy()
    end
end)
