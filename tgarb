local player = game.Players.LocalPlayer
local RunService = game:GetService("RunService")

local coords = {
	Vector3.new(199, -3, 23),
	Vector3.new(285, -3, 35),
	Vector3.new(404, -3, 0),
	Vector3.new(545, -3, 8),
	Vector3.new(756, -3, 6),
	Vector3.new(1079, -3, 5),
	Vector3.new(1321, 3, 13),
	Vector3.new(1569, -6, -28),
}

local index = 1
local root

local gui = player:WaitForChild("PlayerGui"):FindFirstChild("TeleportGUI")
if not gui then
	gui = Instance.new("ScreenGui")
	gui.Name = "TeleportGUI"
	gui.ResetOnSpawn = false
	gui.Parent = player:WaitForChild("PlayerGui")
end

local btn = gui:FindFirstChild("TeleportButton")
if not btn then
	btn = Instance.new("TextButton")
	btn.Name = "TeleportButton"
	btn.Size = UDim2.new(0, 120, 0, 40)
	btn.Position = UDim2.new(0.5, -60, 0, 10)
	btn.Text = "Teleport"
	btn.TextScaled = true
	btn.TextColor3 = Color3.new(1,1,1)
	btn.Font = Enum.Font.GothamBold
	btn.Active = true
	btn.Draggable = true
	btn.Parent = gui
end

local hue = 0
RunService.RenderStepped:Connect(function()
	hue = (hue + 1) % 360
	btn.BackgroundColor3 = Color3.fromHSV(hue/360,1,1)
end)

local function refreshRoot()
	local char = player.Character or player.CharacterAdded:Wait()
	root = char:WaitForChild("HumanoidRootPart")
end
refreshRoot()

player.CharacterAdded:Connect(function()
	refreshRoot()
	index = 1
end)

local function tp(pos)
	if not root then refreshRoot() end
	for i = 1, 5 do
		if root and root.Parent then
			root.CFrame = CFrame.new(pos)
			task.wait(0.1)
			if (root.Position - pos).Magnitude < 2 then break end
		end
	end
end

btn.MouseButton1Click:Connect(function()
	if not root or not root.Parent then refreshRoot() end

	if index == 7 then
		tp(coords[7])
		task.wait(0.2)
		tp(coords[8])
		index = 1
	else
		tp(coords[index])
		index = index + 1
		if index > #coords then
			index = 1
		end
	end
end)
