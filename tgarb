local ReplicatedStorage = game:GetService("ReplicatedStorage")
local Players = game:GetService("Players")
local player = Players.LocalPlayer

-- نبحث عن كل RemoteEvents في اللعبة
local allRemotes = {}
for _, obj in pairs(workspace:GetDescendants()) do
	if obj:IsA("RemoteEvent") then
		table.insert(allRemotes, obj)
	end
end

-- نختار واحد عشوائي منهم
local chosenRemote = nil
if #allRemotes > 0 then
	chosenRemote = allRemotes[math.random(1, #allRemotes)]
end

-- نستخدم RemoteEvent الأصلي للتدبيل
local DuplicateEvent = ReplicatedStorage:WaitForChild("DuplicateEvent")

-- إنشاء الزر
local ScreenGui = Instance.new("ScreenGui", player:WaitForChild("PlayerGui"))
local Button = Instance.new("TextButton", ScreenGui)
Button.Size = UDim2.new(0, 200, 0, 50)
Button.Position = UDim2.new(0.5, -100, 0.8, 0)
Button.Text = "تدبيل الأداة"
Button.BackgroundColor3 = Color3.new(0.2, 0.6, 0.2)
Button.TextColor3 = Color3.new(1, 1, 1)
Button.TextScaled = true
Button.Visible = true

-- لما يضغط الزر
Button.MouseButton1Click:Connect(function()
	if chosenRemote then
		print("تم اختيار ريموت عشوائي:", chosenRemote.Name)
	end
	DuplicateEvent:FireServer()
end)
