local player = game.Players.LocalPlayer
local char = player.Character or player.CharacterAdded:Wait()
local root = char:WaitForChild("HumanoidRootPart")

local coords = {
    Vector3.new(199, -3, 23),  -- الاولى
    Vector3.new(285, -3, 35),  -- الثانية
}

local index = 1

-- GUI
local gui = Instance.new("ScreenGui", player:WaitForChild("PlayerGui"))
gui.ResetOnSpawn = true

local btn = Instance.new("TextButton", gui)
btn.Size = UDim2.new(0, 120, 0, 40)
btn.Position = UDim2.new(0.5, -60, 0, 10)
btn.Text = "Teleport"
btn.TextScaled = true
btn.TextColor3 = Color3.new(1,1,1)
btn.Font = Enum.Font.GothamBold
btn.Active = true
btn.Draggable = true

-- Rainbow
local RunService = game:GetService("RunService")
local hue = 0
RunService.RenderStepped:Connect(function()
	hue = (hue + 1) % 360
	btn.BackgroundColor3 = Color3.fromHSV(hue/360,1,1)
end)

-- تأكد من وجود الكركتر عند الريسباون
local function refresh()
	char = player.Character or player.CharacterAdded:Wait()
	root = char:WaitForChild("HumanoidRootPart")
end

player.CharacterAdded:Connect(function()
	index = 1
	refresh()
end)

-- Teleport function مع تأكيد النقل
local function tp(pos)
	for i = 1, 5 do
		root.CFrame = CFrame.new(pos)
		task.wait(0.1)
		if (root.Position - pos).Magnitude < 2 then
			break
		end
	end
end

btn.MouseButton1Click:Connect(function()
	if not char or not root then refresh() end

	tp(coords[index])
	index = index + 1
	if index > #coords then index = 1 end
end)
