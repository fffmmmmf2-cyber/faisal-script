-- تثبيت كل البارتات المذكورة باستثناء بارتات اللاعب بشكل مستمر
local partsToAnchor = {
    "PetMover",
    "RootPart",
    "Torso",
    "Tail1",
    "Tail3",
    "Tail4",
    "BackLegR",
    "BackLegL",
    "FrontLegR",
    "FrontLegL",
    "Nose",
    "RightWhisker",
    "LeftWhisker",
    "RightEye",
    "LeftEye",
    "RightEar",
    "LeftEar",
    "RightEarInner",
    "LeftEarInner"
}

while true do
    for _, name in ipairs(partsToAnchor) do
        for _, obj in ipairs(workspace:GetDescendants()) do
            if obj:IsA("BasePart") and obj.Name == name then
                if not obj:IsDescendantOf(game.Players.LocalPlayer.Character) then
                    obj.Anchored = true
                end
            end
        end
    end
    wait(0.5) -- يتأكد كل نصف ثانية، تقدر تغيرها لـ1 للثانية
end
