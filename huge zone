-- تثبيت كل البارتات المذكورة باستثناء جسم اللاعب
local partsToAnchor = {
    "PetMover",
    "RootPart",
    "Torso",
    "Tail1",
    "Tail3",
    "Tail4",
    "BackLegR",
    "BackLegL",
    "FrontLegR",
    "FrontLegL",
    "Nose",
    "RightWhisker",
    "LeftWhisker",
    "RightEye",
    "LeftEye",
    "RightEar",
    "LeftEar",
    "RightEarInner",
    "LeftEarInner"
}

for _, name in ipairs(partsToAnchor) do
    for _, obj in ipairs(workspace:GetDescendants()) do
        if obj:IsA("BasePart") and obj.Name == name then
            obj.Anchored = true
        end
    end
end
