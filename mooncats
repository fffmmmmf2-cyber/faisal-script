-- LocalScript: farm_petarea_display.lua
local player = game.Players.LocalPlayer

-- إنشاء ScreenGui
local gui = Instance.new("ScreenGui")
gui.Name = "FarmPetAreaDisplay"
gui.ResetOnSpawn = false
gui.Parent = player:WaitForChild("PlayerGui")

-- TextLabel لعرض المعلومات
local textLabel = Instance.new("TextLabel")
textLabel.Size = UDim2.new(0, 400, 0, 70)
textLabel.Position = UDim2.new(0.5, -200, 0.5, -35) -- في الوسط
textLabel.BackgroundTransparency = 1
textLabel.TextColor3 = Color3.fromRGB(255, 0, 0) -- أحمر
textLabel.Font = Enum.Font.SourceSansBold
textLabel.TextScaled = true
textLabel.TextWrapped = true
textLabel.Parent = gui

-- دالة لحساب عدد PetArea في الـ Workspace
local function getPetAreaCount()
    local count = 0
    for _, part in pairs(workspace:GetDescendants()) do
        if part:IsA("BasePart") and part.Name == "PetArea" then
            count = count + 1
        end
    end
    return count
end

-- دالة للحصول على اسم المزرعة الحالية
local function getFarmName()
    local farm = workspace:FindFirstChild("Farm") -- لو عندك أكثر من Farm، يمكن تحتاج تعديل
    if farm then
        return farm.Name
    else
        return "لا يوجد مزرعة"
    end
end

-- تحديث النص كل 5 ثواني
while true do
    local farmName = getFarmName()
    local petCount = getPetAreaCount()
    textLabel.Text = "أنت في: " .. farmName .. "\nالعدد(" .. petCount .. ")"
    wait(5)
end
