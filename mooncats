local RunService = game:GetService("RunService")
local Workspace = game:GetService("Workspace")
local Players = game:GetService("Players")

local player = Players.LocalPlayer
local petService = require(game.ReplicatedStorage.Modules.PetServices.ActivePetsService)

-- هنا حط اسم البارت اللي يمثل PetArea
local petAreaPart = Workspace:WaitForChild("PetArea")

-- تحديث موقع الحيوانات كل فترة
RunService.RenderStepped:Connect(function()
    local clientPets = petService:GetClientPetState(player.Name)
    for _, petData in clientPets do
        if petData.Asset then
            local pet = petData.Asset
            local center = petAreaPart.Position
            pet.CFrame = CFrame.new(center.X, center.Y + 2, center.Z) -- +2 عشان شوي فوق الأرض
        end
    end
end)
