-- تعريف الموديل
local model = workspace:WaitForChild("Seed Stands")

-- دالة لتوليد ألوان رينبو
local function getRainbowColor(time)
    local hue = (time % 1) -- نضمن القيمة بين 0 و1
    return Color3.fromHSV(hue, 1, 1)
end

-- تحديث الألوان باستمرار
while true do
    for _, part in pairs(model:GetDescendants()) do
        if part:IsA("BasePart") then
            part.Color = getRainbowColor(tick() + part.Position.Magnitude/10)
        end
    end
    wait(0.1) -- تحديث كل 0.1 ثانية
end
