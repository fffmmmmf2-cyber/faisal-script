local player = game.Players.LocalPlayer
local char = player.Character or player.CharacterAdded:Wait()
local hrp = char:WaitForChild("HumanoidRootPart")
local RunService = game:GetService("RunService")

-- نخزن موقع البداية
local lastPosition = hrp.Position

RunService.RenderStepped:Connect(function()
    -- إذا حاول أي شيء يحركك للخلف بشكل مفاجئ
    local moveVector = hrp.Position - lastPosition
    if moveVector.Magnitude > 50 then -- لو الحركة كبيرة فجأة
        hrp.CFrame = CFrame.new(lastPosition) -- نرجع مكانك
    else
        lastPosition = hrp.Position -- تحديث آخر موقع طبيعي
    end
end)
