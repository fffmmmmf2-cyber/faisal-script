local player = game.Players.LocalPlayer

-- إعدادات
local FARM_NAME = "Farm"          -- اسم الفولدر للمزارع
local PET_AREA_NAME = "PetArea"   -- اسم البارت داخل المزرعة
local TARGET_TRANSPARENCY = 0.9   -- الشفافية إذا تأكد أنها مزرعتك

-- دالة لاكتشاف المزرعة التي أنت فيها
local function getCurrentFarm()
    for _, folder in pairs(workspace:GetChildren()) do
        if folder:IsA("Folder") and folder.Name == FARM_NAME then
            -- هنا ممكن تضيف شرط حسب موقع اللاعب لاحقًا
            return folder
        end
    end
    return nil
end

-- التحقق من المزرعة وPetArea
local farm = getCurrentFarm()
if farm then
    local petArea = farm:FindFirstChild(PET_AREA_NAME)
    if petArea and petArea:IsA("BasePart") then
        print("تم العثور على مزرعتك: " .. farm.Name)
        print("عدد PetArea داخل المزرعة: 1")

        -- تغيير شفافية PetArea
        petArea.Transparency = TARGET_TRANSPARENCY
        petArea.CanCollide = false

        -- إضافة علامة/مؤشر في اللعبة للمزرعة الخاصة بك
        local indicator = Instance.new("Part")
        indicator.Size = Vector3.new(2, 2, 2)
        indicator.Anchored = true
        indicator.CanCollide = false
        indicator.Material = Enum.Material.Neon
        indicator.BrickColor = BrickColor.new("Bright green")
        indicator.Position = petArea.Position + Vector3.new(0, 5, 0) -- فوق PetArea
        indicator.Parent = workspace

    else
        warn("لم يتم العثور على PetArea داخل المزرعة.")
    end
else
    warn("لم يتم العثور على مزرعة باسم: " .. FARM_NAME)
end
