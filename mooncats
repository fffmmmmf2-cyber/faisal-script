local Players = game:GetService("Players")
local Workspace = game:GetService("Workspace")
local player = Players.LocalPlayer

-- دالة تحذف أي بارت اسمه "Base Home"
local function removeBaseHome(parent)
    for _, obj in pairs(parent:GetDescendants()) do
        if obj:IsA("BasePart") and obj.Name == "Base Home" then
            obj:Destroy()
        end
    end
end

-- دالة تسوي اسم فوق كل بارت (ما تطبقه على جسم اللاعب)
local function showNames(parent)
    for _, obj in pairs(parent:GetDescendants()) do
        if obj:IsA("BasePart") and not obj:IsDescendantOf(player.Character) then
            -- إنشاء BillboardGui
            local billboard = Instance.new("BillboardGui")
            billboard.Size = UDim2.new(0, 100, 0, 50)
            billboard.Adornee = obj
            billboard.AlwaysOnTop = true

            -- إنشاء TextLabel
            local text = Instance.new("TextLabel")
            text.Size = UDim2.new(1,0,1,0)
            text.BackgroundTransparency = 1
            text.Text = obj.Name
            text.TextColor3 = Color3.new(1,1,1)
            text.TextScaled = true
            text.Parent = billboard

            billboard.Parent = obj
        end
    end
end

-- تنفيذ الحذف أولًا
removeBaseHome(Workspace)

-- عرض أسماء كل البارتات الباقية ما عدا جسم اللاعب
showNames(Workspace)
