-- LocalScript
-- إعدادات البارت
local PART_POSITION = Vector3.new(32.8, 2.75, -104.8)
local PART_SIZE = Vector3.new(12, 6, 61)
local PART_COLOR = BrickColor.new("Bright red")

-- إنشاء البارت
local petArea = Instance.new("Part")
petArea.Name = "PetArea"      -- الاسم المحدد
petArea.Size = PART_SIZE
petArea.Position = PART_POSITION
petArea.Anchored = true
petArea.CanCollide = false
petArea.Material = Enum.Material.Neon
petArea.BrickColor = PART_COLOR
petArea.Parent = workspace
